.container {
    padding: 0;
    height: 100vh;
}

.headPic,
swiper,
swiper-item,
.headPic image {
    width: 100vw;
    height: 700rpx;
    /* position: absolute; */
    object-fit: cover;
    overflow: hidden;
    margin: 0;
    /* top: 0; */
}

.grey {
    color: gray;
}

.good_msg {
    width: 100vw;
    min-height: 210rpx;
    height: fit-content;
    box-sizing: border-box;
    padding: 20rpx 10rpx 20rpx 10rpx;
}

.price_icon {
    font-size: 25rpx;
    color: #FA1E8B;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.price {
    font-size: 35rpx;
    color: #FA1E8B
}

.sale {
    font-size: 25rpx;
    margin-bottom: 10rpx;
}

.space {
    width: 100vw;
    height: 25rpx;
    background: #f2f3f5
}

.share {
    text-align: center;
    transform: translateY(20rpx)
}

.share image {
    width: 40rpx;
    height: 40rpx
}

/* .share view{
    
} */
.headPic {
    position: relative;
}

.page_tip {
    background: rgba(0, 0, 0, 0.5);
    width: 70rpx;
    color: lightgray;
    border-radius: 25rpx;
    text-align: center;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 25rpx;
    z-index: 9;
}

.pop_container {
    height: 100%;
    width: 100vw;
    box-sizing: border-box;
    position: relative;
    border: 0;
    /* padding: 20rpx; */
}

.close_btn {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 30rpx;
    right: 20rpx;
}

.number_pic {
    width: 150rpx;
    height: 150rpx;
    border: 5rpx solid white;
    box-shadow: 0 0 10rpx lightgrey;
    position: fixed;
    top: 30rpx;
    left: 30rpx;
}

.number_pic image {
    width: 100%;
    height: 100%
}

.price_msg {
    position: absolute;
    top: 20rpx;
    left: 260rpx;
}

/* .buy_number {
    position: absolute;
    bottom: 110rpx;
    left: 30rpx;
} */

.type {
    /* position: absolute;
    top: 260rpx;
    left: 30rpx; */
    width: 100vw;
    font-size: 25rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
}

.van-cell-text text {
    margin-left: 10rpx;
}

.type_item_choose {
    background-color: #FA1E8B;
    color: white;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
    /* width: fit-content; */
    padding: 10rpx 20rpx 10rpx 20rpx;
}

.type_item {
    background-color: white;
    color: grey;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
    /* width: fit-content; */
    padding: 10rpx 20rpx 10rpx 20rpx;
    border: 1rpx solid lightgrey;
}

.number_btns {
    position: fixed;
    bottom: 0;
    width: 100vw;
    padding: 0;
    height: 90rpx;
    line-height: 90rpx;

}

.pop_icon {
    display: inline-block;
    width: 50vw !important;
    color: white;
    border-radius: 0;
    margin: 0;
    border: none;
    height: 100%;
    text-align: center;
}

.enter_cart {
    background: linear-gradient(to right, #FED682, #FCB202);
}

.quick_buy {
    background: linear-gradient(to right, #FC70AA, #FA1E79);
}

.bottom {
    width: 100vw;
    height: 90rpx;
    position: fixed;
    bottom: 0;
    background: white;
    /* box-shadow: 0 -5rpx 10rpx #eee; */
    cursor: pointer;
}

.btn {
    border-radius: 0;
    height: 90rpx;
    color: white;
    text-align: center !important;
    display: flex;
    justify-content: center;
    align-items: center;

}

.bar_icon {
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: grey;
}

.bar_icon button {
    height: 90rpx;
    padding-top: 15rpx;
    color: grey;
    background: none;
    border: none;
    box-shadow: none
}

.first_bar_icon {
    border-right: 1rpx solid #eee;
}

.intro_imgs {
    margin-bottom: 0rpx
}

.intro_imgs image {
    width: 100vw
}

.popStyle {
    height: 480rpx;
    /* box-shadow: 0 -5rpx 10rpx #eee; */
}

.popStyle2 {
    height: 92vh;
    /* box-shadow: 0 -5rpx 10rpx #eee; */
}

.big-type-item {
    width: 200rpx;
    height: 260rpx;
    text-align: center;
    margin-bottom: 15rpx;
    border: none;
    border-radius: 0rpx;
    margin-right: 10rpx;
    border: 1px solid white;
    padding: 5rpx;
    padding-bottom: 1rpx;
    position: relative;

}

.big-type-item-active {
    border: 1px solid #FA1E79;
    border-radius: 20rpx;
    position: relative;
}

.scaleIcon {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    top: 10rpx;
    right: 10rpx;
    background: white;
    border-radius: 50%;
}

.big-type-item-name {
    margin: auto;
    width: 200rpx;
    box-sizing: border-box;
    border-radius: 20rpx;

}

.big-type-item .big-type-item-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;

}

.small-item {
    width: fit-content;
    border-radius: 10rpx;
    background: rgba(238, 238, 238, 0.418);
    padding: 5rpx 15rpx;
    /* display: inline-block; */
    margin-right: 10rpx;
    margin-bottom: 20rpx;
    float: left;
    display: flex;
    border: 1rpx solid white;
    align-items: center;
}

.small-item-active {
    color: #FA1E8B;
    border: 1rpx solid #FA1E8B;
}

.small-item image {
    margin-right: 10rpx;
}

.small-type-item-img {
    width: 30rpx;
    height: 30rpx;
}

.sharePic {
    width: 80vw;
    height: 70vh;
    text-align: center;
    border-radius: 15rpx;
    position: relative;
    padding: 30rpx;
}

.sharePicBox {
    width: 100%;
    margin: auto;
    box-shadow: 0 0rpx 5rpx grey;
    overflow: hidden;
    padding: 5rpx;
    height: 500rpx;
    margin-top: 60rpx;
}

.sharePicBox image {
    width: 100%;
    height: 100%;
}

.savePicBtn {
    position: absolute;
    bottom: 50rpx;
    width: 100%;
    box-sizing: border-box;
    left: 0;
    right: 0;
    margin: auto;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.closeShareBtn {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}

/* 去掉按钮默认边框 */
.bar_icon button::after {
    border: 0;
}

.showImg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: black;
    z-index: 999999999999;
}

.show-item-img {
    width: 100vw;
    margin-top: 20vh;
    height: 50vh;
}

.show-item-name {
    color: white;
    padding: 10rpx 40rpx;
    width: fit-content;
    height: fit-content;
    border-radius: 30rpx;
    background: rgba(250, 250, 250, 0.2);
    margin: auto;
    margin-top: 100rpx;
}

.topIcon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background: white;
    border: 1rpx solid rgba(211, 211, 211, 0.74);
    position: fixed;
    bottom: 150rpx;
    right: 50rpx;
    z-index: 9999999999;
    display: flex;
    justify-content: center;
    align-items: center;

}

.topIcon image {
    width: 50%;
    height: 50%;
}

.loginContent {
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center
}