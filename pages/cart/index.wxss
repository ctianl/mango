/* pages/cart/index.wxss */
.container {
    padding: 0;
    min-height: 100vh;
    height: fit-content;
    background-color: rgba(238, 238, 238, 0.364);
    padding-bottom: 100rpx;
}
.top{
    height: 80rpx;
    width: 100vw;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 5rpx;
    padding-right: 10rpx;
}
.good_list{
    background-color: white;
}
.good_item{
    width: 100vw;
    min-height: 240rpx;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
    position: relative;
}
.img{
    width: 170rpx;
    height: 170rpx;
    position: absolute;
    top: 25rpx;
    left: 80rpx;
}
.checkbox{
    width: 80rpx;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.right{
    height: 240rpx;
    position: absolute;
    top: 0rpx;
    left: 260rpx;
    font-size: 30rpx;
    padding: 5rpx;
    box-sizing: border-box;
    padding-top: 25rpx;
    width:66%;box-sizing:border-box
}

.input-class{
    background-color: white;
    border: 1px solid #eee;
}
.price{
    color: #FF495E;
    margin-top: 10rpx;
    /* position: absolute;
    bottom: 10rpx; */
}
.step{
    position: absolute;
    bottom: 10rpx;  
    right: 10rpx;
}

.item_type{
    color: gray;
    font-size: 25rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    width: fit-content;
    border-radius: 10rpx;
    box-sizing: border-box;
    width: 90%;
    padding: 5rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
     /*文本强制不换行*/
     white-space: nowrap;
     /*文本溢出显示省略号*/
     text-overflow: ellipsis;
     /*溢出的部分隐藏*/
     overflow: hidden;

}
.bottom {
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
    position: fixed;
    bottom: -1rpx;
    background: white;
    /* box-shadow: 0 -5rpx 10rpx #eee; */

}

.actionBtn{
    background-color: red;
    color: white;
    height: 100%;
    text-align: center;
}

.full{
    height: 90rpx;
    padding-top: 34rpx;
    padding-left: 20rpx;
}
.sum_price{
    color: #FF495E;
    font-size: 27rpx;
    transform: translateY(4rpx);
}