/* pages/groupGoodMsg/index.wxss */
.container {
    padding: 0;
    height: 100vh;
}

.headPic,
swiper,
swiper-item,
.headPic image {
    width: 100vw;
    height: 700rpx;
    /* position: absolute; */
    object-fit: cover;
    overflow: hidden;
    margin: 0;
    /* top: 0; */
}

.grey {
    color: gray;
}

.good_msg {
    width: 100vw;
    height: 210rpx;
    box-sizing: border-box;
    padding: 20rpx 10rpx 20rpx 10rpx;
}


.sale {
    font-size: 25rpx;
    margin-bottom: 10rpx;
}

.space {
    width: 100vw;
    height: 25rpx;
    background: #f2f3f5
}
.left_msg .over2{
    width: 600rpx;
      /* 最多显示两行 */
      text-overflow: -o-ellipsis-lastline;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
}

.share {
    text-align: center;
    width: 80rpx;
    height: 80rpx;
}

.share image {
    width: 40rpx;
    height: 40rpx
}

