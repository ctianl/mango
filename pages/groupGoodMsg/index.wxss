}

.type_item_choose {
    background-color: #FA1E8B;
    color: white;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
    width: fit-content;
    padding: 10rpx 20rpx 10rpx 20rpx;
}

.type_item {
    background-color: white;
    color: grey;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
