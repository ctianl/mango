    margin-top: 60rpx;
}

.sharePicBox image {
    width: 100%;
    height: 100%;
}

.savePicBtn {
    position: absolute;
    bottom: 50rpx;
    width: 100%;
    box-sizing: border-box;
    left: 0;
    right: 0;
    margin: auto;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.closeShareBtn {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}
