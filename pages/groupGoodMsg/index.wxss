    padding: 10rpx 20rpx 10rpx 20rpx;
    border: 1rpx solid lightgrey;
}
.van-cell-text text{
    margin-left: 10rpx;
}
.number_btns {
    position: fixed;
    bottom: 0;
    width: 100vw;
    padding: 0;
    height: 90rpx;
    line-height: 90rpx;
    background: #FA1E8B;
    color: white;
    text-align: center;
}

.pop_icon {
    display: inline-block;
    width: 50vw !important;
    color: white;
    border-radius: 0;
    margin: 0;
    border: none;
    height: 100%;
    text-align: center;
}

.enter_cart {
    background: linear-gradient(to right, #FED682, #FCB202);
}

.quick_buy {
    background: linear-gradient(to right, #FC70AA, #FA1E79);
}

.bottom {
    width: 100vw;
    height: 90rpx;
    position: fixed;
    bottom: 0;
    background: white;
    /* box-shadow: 0 -5rpx 10rpx #eee; */
}

.bbtn {
    border-radius: 0;
    height: 90rpx;
    color: white;
    text-align: center !important;
    font-size: 25rpx;
    padding-top: 15rpx;
}

.bar_icon {
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: grey;
}
.bar_icon button{
    height:90rpx;padding-top:15rpx;color:grey;background:none;border:none;box-shadow:none
}
.first_bar_icon {
    border-right: 1rpx solid #eee;
}

.intro_imgs {
    margin-bottom: 0rpx
}

.intro_imgs image {
    width: 100vw
}

