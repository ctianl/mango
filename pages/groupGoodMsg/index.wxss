.headPic {
    position: relative;
}

.page_tip {
    background: rgba(0, 0, 0, 0.5);
    width: 70rpx;
    color: lightgray;
    border-radius: 25rpx;
    text-align: center;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 25rpx;
    z-index: 9;
}

.pop_container {
    height: 100%;
    width: 100vw;
    box-sizing: border-box;
    position: relative;
    border: 0;
}

.close_btn {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 30rpx;
    right: 20rpx;
}

.number_pic {
    width: 150rpx;
    height: 150rpx;
    border: 5rpx solid white;
    box-shadow: 0 0 10rpx lightgrey;
    position: fixed;
    top: 30rpx;
    left: 30rpx;
}

.number_pic image {
    width: 100%;
    height: 100%
}

.price_msg {
    position: absolute;
    top: 60rpx;
    left: 260rpx;
}

