/* pages/group/index.wxss */
.container{
    padding: 0;
    min-height: 100vh;
    height: fit-content;
    background: rgba(238, 238, 238, 0.349);
    /* background: #eee; */
    padding-top: 20rpx;
}
.box{
    height: 270rpx;
    width: 95vw;
    background: white;
    margin: auto;
    margin-bottom: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.img{
    width: 230rpx;
    height: 230rpx;
}
.name{
    font-size: 28rpx;
    margin-bottom: 20rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 73rpx;
}
.size,.money,.intro{
    font-size: 25rpx;
 
}
.money{
    display: flex;
    justify-content: space-between;
}
.intro{
    /* 只显示一行 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-bottom: 15rpx;
}
.size{
    margin-bottom: 10rpx;
    
}
.red{
    color: #F03C3C;
    margin-right: 10rpx;
}
.grey{
    color: #999999;
}
.good_price{
    text-decoration: line-through;
}
.groupBtn{
    height: 50rpx!important;
    border-radius: 30rpx!important;
    line-height: 50rpx!important;
    background: #F03C3C!important;
    box-shadow: 2rpx 5rpx 10rpx #f03c3c86;
    cursor: pointer;
}
.icon{
    transform: translateY(8rpx);
    font-size: 30rpx!important;
    margin-right: 5rpx;
}
