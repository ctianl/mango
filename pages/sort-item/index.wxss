.container {
    padding: 0;
    height: 100vh;
}

.wrap {
    width: 100vw;
    /* height: 500rpx; */
    box-sizing: border-box;
    text-align: center;
    margin-bottom:60rpx
}

.name {
    text-align: center;
    font-size: 40rpx;
    border-bottom: 10rpx solid brown;
    width: fit-content;
    margin: auto;
    margin-top: 40rpx;
    margin-bottom: 60rpx
}

.hotel-img{
    width: 90%;
    height: 400rpx;
}
.meeting-img{
    height:300rpx;border-radius:15rpx
}
.item {
    display: flex;
    justify-content: space-between;
    width: 90%;
    margin: auto;
    align-items: center;
    color: grey;
    font-size: 28rpx;
    margin-top: 15rpx
}

.price {
    color: brown;
    font-size: 35rpx
}

.golden {
    color: #BDA97D !important
}

.meeting-text {
    color: black;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center
}

.meeting-text text {
    color: grey;
    font-size: 20rpx;
    margin-left: 20rpx
}

.content-item {
    text-align: center;
    padding: 20rpx;
  
  }
  
  .content-item-img {
    width: 95%;
    height: 300rpx;
    border-radius: 15rpx
  }
  
  .content-item-text {
    width: 95%;
    text-align: left;
    position: relative;
    color: grey;
    line-height: 50rpx
  }
  
  .content-item-price {
    color: brown;
    text-align: right;
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 35rpx
  }