.content-item {
  text-align: center;
  padding: 20rpx;

}

.content-item-img {
  width: 95%;
  height: 300rpx;
  border-radius: 15rpx
}

.content-item-text {
  width: 95%;
  text-align: left;
  position: relative;
  color: grey;
  /* line-height: 50rpx; */
  font-size: 28rpx;
}

.content-item-price {
  color: #FA1E8B;
  text-align: right;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 35rpx
}

.nav_fixed {
  position: fixed;
  top: 0rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: white;
  z-index: 99999;
}

.newGood {
  background: rgba(255, 182, 193, 0.24);
  height: fit-content;
  width: 100vw;
  padding-bottom: 20rpx;
}

.whiteBox {
  background: white;
  border-radius: 20rpx;
  width: 95vw;
  height: fit-content;
  margin: auto;
  padding: 20rpx;
  padding-bottom: 3rpx;
  box-sizing: border-box;
}

.new_text {
  text-align: center;
  font-size: 45rpx;
  font-weight: bold;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.new_text text {
  font-style: italic;

}

.newGoodItem {
  border: 1px solid pink;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  height: 300rpx;
  position: relative;

}

.new_good_msg {
  position: absolute;
  width: 370rpx;
  height: 300rpx;
  right: 0;
  text-align: center;

}

.new_good_img,
.new_good_msg {
  display: inline-block;
}

.clear {
  clear: both;
}

.new_good_name {
  font-size: 45rpx;
  font-weight: bold;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.price_text {
  font-size: 25rpx;

}

.quickBuy {
  background: #FA1E8B;
  color: white;
  width: 230rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  text-align: left;
  position: absolute;
  right: 0;
  bottom: 40rpx;
  padding-left: 20rpx;
}

.love_icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 15rpx;
}

.cart_icon {
  width: 30rpx;
  height: 30rpx;
  background: white;
  border-radius: 50%;
  padding: 5rpx;
  display: inline-block;
  margin-left: 30rpx;
