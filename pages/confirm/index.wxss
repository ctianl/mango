.container {
    padding: 0;
    height: 100vh;
    /* font-size: 35rpx; */
}

.pink {
    color: #FA1E8B
}

.grey {
    color: gray;
}

.address {
    width: 100vw;
    height: fit-content;
}

.detail {
    padding-top: 5%;
    height: 230rpx;
    box-sizing: border-box;
    padding-right: 10rpx;
    font-size: 28rpx;
}

.num_price {
    display: flex;
    justify-content: space-between;
    padding-right: 30rpx;
}

.grey_line {
    height: 15rpx;
    width: 100vw;
    background: rgba(238, 238, 238, 0.446);
}

.sum_msg {
    text-align: right;
    border-top: 1rpx solid #eee;
    padding: 15rpx 5rpx 15rpx 5rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    padding-right:30rpx;
}

.good_msg {
    height: 230rpx;
}

.img_box {
    width: 100%;
    height: 230rpx;
    text-align: center;
}

.img {
    width: 80%;
    height: 80%;
    margin-top: 10%;
}
.name{
    font-size:30rpx;margin-bottom:20rpx
}
.check_icon{
    width: 30rpx;
    height: 30rpx;
}
.checkbox{
    display: flex;
    justify-content: flex-end;
}
.pay_icon{
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    margin-right: 20rpx;
    
}
.van-cell-text{
    display: flex;
    align-items: center;
}
